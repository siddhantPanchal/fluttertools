{
  "name": "fluttertools",
  "displayName": "Flutter Tools",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fluttertools.createPage",
        "title": "Create Flutter Page",
        "category": "flutter@page"
      },
      {
        "command": "fluttertools.installDependencies",
        "title": "Install Dependencies",
        "category": "flutter@dep"
      },
      {
        "command": "fluttertools.freezedModel",
        "title": "Create Freezed Model",
        "category": "flutter@model"
      },
      {
        "command": "fluttertools.flavorizrSupport",
        "title": "Add Flavorizr Support",
        "category": "flutter@flavorizrSupport"
      },
      {
        "command": "fluttertools.addFlavor",
        "title": "Add New Flavor",
        "category": "flutter@flavorizrSupport"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "fluttertools.submenu",
          "when": "explorerResourceIsFolder",
          "group": "flutter"
        }
      ],
      "fluttertools.submenu": [
        {
          "command": "fluttertools.createPage",
          "group": "flutter@page",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "fluttertools.installDependencies",
          "group": "flutter@dep",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "fluttertools.freezedModel",
          "group": "flutter@model",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "fluttertools.flavorizrSupport",
          "group": "flutter@flavorizrSupport",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "fluttertools.addFlavor",
          "group": "flutter@flavorizrSupport",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "submenus": [
      {
        "id": "fluttertools.submenu",
        "label": "Flutter Tools"
      }
    ],
    "configuration": {
      "title": "Flutter Page Generator",
      "properties": {
        "flutterPageGenerator.defaultTemplate": {
          "type": "string",
          "default": "stateless",
          "enum": [
            "stateless",
            "stateful",
            "bloc",
            "provider",
            "custom"
          ],
          "description": "Default template to use when creating Flutter pages"
        },
        "flutterPageGenerator.customTemplates": {
          "type": "object",
          "default": {},
          "description": "Custom templates for Flutter pages"
        },
        "flutterPageGenerator.includeTests": {
          "type": "boolean",
          "default": true,
          "description": "Include test files when creating pages"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "quicktype-core": "^23.2.6",
    "yaml": "^2.8.0"
  }
}
