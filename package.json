{
  "name": "fluttertools",
  "displayName": "Flutter Tools",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fluttertools.createPage",
        "title": "Create Page...",
        "category": "Flutter Tools"
      },
      {
        "command": "fluttertools.installDependencies",
        "title": "Install Dependencies",
        "category": "Flutter Tools"
      },
      {
        "command": "fluttertools.freezedModel",
        "title": "Create Freezed Model...",
        "category": "Flutter Tools"
      },
      {
        "command": "fluttertools.flavorizrSupport",
        "title": "Add Flavorizr Support",
        "category": "Flutter Tools"
      },
      {
        "command": "fluttertools.addFlavor",
        "title": "Add New Flavor...",
        "category": "Flutter Tools"
      },
      {
        "command": "fluttertools.buildFlavors",
        "title": "Build Flavors",
        "category": "Flutter Tools"
      },
      {
        "command": "fluttertools.starterApp",
        "title": "Create Flutter Starter App...",
        "category": "Flutter Tools"
      },
      {
        "command": "fluttertools.updatePubspecAssets",
        "title": "Update pubspec.yaml Assets",
        "category": "Flutter Tools"
      },
      {
        "command": "fluttertools.generateAssetPaths",
        "title": "Generate Asset Paths",
        "category": "Flutter Tools"
      },
      {
        "command": "fluttertools.stopAssetWatcher",
        "title": "Stop Asset Watcher",
        "category": "Flutter Tools"
      },
      {
        "command": "fluttertools.startAssetWatcher",
        "title": "Start Asset Watcher",
        "category": "Flutter Tools"
      }
    ],
    "submenus": [
      {
        "id": "fluttertools.submenu",
        "label": "Flutter Tools"
      },
      {
        "id": "fluttertools.submenu.codegen",
        "label": "Code Generation"
      },
      {
        "id": "fluttertools.submenu.assets",
        "label": "Asset Management"
      },
      {
        "id": "fluttertools.submenu.dependencies",
        "label": "Dependency Management"
      },
      {
        "id": "fluttertools.submenu.flavors",
        "label": "Flavor & Build"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "fluttertools.submenu",
          "when": "explorerResourceIsFolder",
          "group": "flutter"
        }
      ],
      "fluttertools.submenu": [
        {
          "submenu": "fluttertools.submenu.codegen",
          "group": "1_codegen"
        },
        {
          "submenu": "fluttertools.submenu.assets",
          "group": "2_assets"
        },
        {
          "submenu": "fluttertools.submenu.dependencies",
          "group": "3_dependencies"
        },
        {
          "submenu": "fluttertools.submenu.flavors",
          "group": "4_flavors"
        }
      ],
      "fluttertools.submenu.codegen": [
        {
          "command": "fluttertools.createPage",
          "group": "1_page"
        },
        {
          "command": "fluttertools.freezedModel",
          "group": "2_model"
        }
      ],
      "fluttertools.submenu.assets": [
        {
          "command": "fluttertools.updatePubspecAssets"
        },
        {
          "command": "fluttertools.generateAssetPaths"
        },
        {
          "command": "fluttertools.stopAssetWatcher"
        },
        {
          "command": "fluttertools.startAssetWatcher"
        }
      ],
      "fluttertools.submenu.dependencies": [
        {
          "command": "fluttertools.installDependencies"
        }
      ],
      "fluttertools.submenu.flavors": [
        {
          "command": "fluttertools.flavorizrSupport",
          "group": "1_setup"
        },
        {
          "command": "fluttertools.addFlavor",
          "group": "2_manage"
        },
        {
          "command": "fluttertools.buildFlavors",
          "group": "2_manage"
        }
      ]
    },
    "configuration": {
      "title": "Flutter Page Generator",
      "properties": {
        "flutterPageGenerator.defaultTemplate": {
          "type": "string",
          "default": "stateless",
          "enum": [
            "stateless",
            "stateful",
            "bloc",
            "provider",
            "custom"
          ],
          "description": "Default template to use when creating Flutter pages"
        },
        "flutterPageGenerator.customTemplates": {
          "type": "object",
          "default": {},
          "description": "Custom templates for Flutter pages"
        },
        "flutterPageGenerator.includeTests": {
          "type": "boolean",
          "default": true,
          "description": "Include test files when creating pages"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/readable-stream": "^4.0.21",
    "@types/sinon": "^17.0.4",
    "@types/urijs": "^1.19.25",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "command-line-args": "^6.0.1",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "quicktype-core": "^23.2.6",
    "yaml": "^2.8.0"
  }
}
